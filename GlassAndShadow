Shader "LINH/UI/GlassEdgeLine"
{
    Properties
    {
        _EdgeColor("Edge Color", Color) = (1,1,1,0.8)
        _InnerAlpha("Inner Transparency", Range(0,1)) = 0.1
        _EdgeWidth("Edge Thickness", Range(0.001, 0.5)) = 0.15

        _CenterBrightness("Center Brightness", Range(0,2)) = 1.2
        _CenterFalloff("Center Falloff", Range(0.1,2)) = 1
    }

    SubShader
    {
        Tags { "Queue" = "Transparent" "RenderType" = "Transparent" }
        Blend SrcAlpha OneMinusSrcAlpha
        ZWrite Off
        Cull Off

        Pass
        {
            CGPROGRAM
            #pragma vertex vert
            #pragma fragment frag
            #include "UnityCG.cginc"

            float4 _EdgeColor;
            float _InnerAlpha;
            float _EdgeWidth;

            float _CenterBrightness;
            float _CenterFalloff;

            struct appdata
            {
                float4 vertex : POSITION;
                float2 uv     : TEXCOORD0;
            };

            struct v2f
            {
                float4 pos : SV_POSITION;
                float2 uv  : TEXCOORD0;
            };

            v2f vert(appdata v)
            {
                v2f o;
                o.pos = UnityObjectToClipPos(v.vertex);
                o.uv = v.uv;
                return o;
            }

            fixed4 frag(v2f i) : SV_Target
            {
                float2 uv = i.uv;

                // === VIỀN TRẮNG HAI BÊN ===
                float distEdge = min(uv.x, 1 - uv.x);
                float edge = saturate(1 - distEdge / _EdgeWidth);

                float edgeAlpha = _EdgeColor.a * edge;
                float innerBaseAlpha = _InnerAlpha * (1 - edge);

                float3 baseColor = lerp(0, _EdgeColor.rgb, edge);

                // === HIGHLIGHT Ở GIỮA – SÁNG Ở CENTER & TỐI DẦN RA VIỀN ===
                float distCenter = abs(uv.x - 0.5) * 2; // 0 ở giữa, 1 ở mép
                float centerHighlight = pow(1 - distCenter, _CenterFalloff);

                float3 highlightColor = _EdgeColor.rgb * _CenterBrightness * centerHighlight;

                float3 finalColor = baseColor + highlightColor;

                // Alpha cho highlight (mềm)
                float finalAlpha = edgeAlpha + innerBaseAlpha + centerHighlight * 0.2;

                return float4(finalColor, finalAlpha);
            }

            ENDCG
        }
    }
}
